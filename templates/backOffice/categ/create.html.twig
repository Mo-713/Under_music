{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{parent()}}
	{{ encore_entry_link_tags('createCategory') }}
{% endblock %}

{% block javascripts %}
	{{parent()}}
	{{ encore_entry_script_tags('createCategory') }}
{% endblock %}

{% block title %}Create a category
{% endblock %}

{% block main %}
	<main>
		<h1>Create a Category</h1>

		{% if app.user and "ROLE_ADMIN" in app.user.roles %}
			<div class="form-container">
				{{ form_start(form) }}

				<div class="form-group">
					{{ form_label(form.name) }}
					{{ form_widget(form.name) }}
					{{ form_errors(form.name) }}

					<button type="submit" class="btn-save-categ">
						{{ labelBtn|default('Save') }}
					</button>
				</div>

				{{ form_end(form) }}
			</div>
		{% endif %}

		<a class="btn-back-list" href="{{ path('admin_index_category') }}">
			Back
		</a>

	</main>
{% endblock %}
